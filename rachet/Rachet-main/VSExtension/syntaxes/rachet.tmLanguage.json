{
  "scopeName": "source.rachet",
  "name": "Rachet",
  "patterns": [
    {
      "name": "comment.line.number-sign.rachet",
      "match": "#.*$"
    },
    {
      "name": "comment.line.double-slash.rachet",
      "match": "//.*$"
    },
    {
      "name": "keyword.control.rachet",
      "match": "\\b(if|else|let|fn|return|match|os|print|input|not|use|crate)\\b"
    },
    {
      "name": "storage.type.rachet",
      "match": "\\b(i32|string|float|bool|char)\\b"
    },
    {
      "name": "constant.numeric.rachet",
      "match": "\\b[0-9]+\\b"
    },
    {
      "name": "string.quoted.double.rachet",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rachet",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "entity.name.function.rachet",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()"
    },
    {
      "name": "variable.other.rachet",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "punctuation.terminator.rachet",
      "match": ";"
    },
    {
      "name": "punctuation.separator.key-value.rachet",
      "match": ":"
    },
    {
      "name": "punctuation.terminator.rachet",
      "match": ";"
    },
    {
      "name": "keyword.operator.rachet",
      "match": "==|!=|&&|\\|\\||[+\\-*/%=!<>]"
    }
  ]
}
